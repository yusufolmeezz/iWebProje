<%- include('includes/head.ejs') %>

    </head>
    
    <body class="d-flex flex-column h-100">
        <%- include('includes/nav.ejs') %>
        <h1 class="fw-bolder" style="color: white; display: block; text-align: center; padding-top: 20px;">Duyuru Panosu</h1>
            <div style="background: rgba(86, 26, 154, 0.2 );
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 10px );
            -webkit-backdrop-filter: blur( 10px );
            border-radius: 10px;
            border: 1px solid rgba( 255, 255, 255, 0.18 ); margin: 50px; padding: 7px; min-height: 650px;">

                <table class="table">
                    <tr>
                      <th>#</th>
                      <th>Başlık</th>
                      <th>Duyuru</th>
                      <th>Tarih</th>
                    </tr>
                    <% if(duyurular.length>0) {%>
                      <% let sayi1=1; %>
                      <% for(let duyuru of duyurular) {%>
                    <tr style="background-color: rgba(255, 0, 0, 0.1);">
                        <th scope="row"  style="height: 100px; padding-top: 35px; padding-bottom: 35px; margin-right: 10px;"><%=sayi1 %></th>
                        <th style="height: 100px; padding-top: 35px; padding-bottom: 35px; padding-right: 70px;"><%=duyuru.duyuru_baslik %></th>
                        <td style="max-width: 900px; min-width: 500px; word-break: break-word; padding-top: 35px; padding-bottom: 35px;""><%=duyuru.duyuru_icerik %> </td>
                        <td style="height: 100px; padding-top: 35px; padding-bottom: 35px;"><%=duyuru.duyuru_tarih %></td>
                        <td>
                          <form action="duyuru-sil" method="post" style="height: 100px;padding-top: 21px;">
                                <input type="hidden" name="duyuruId" value="<%=duyuru._id %>">
                              <% if(yonetici) {%>
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <button type="submit" class="btn btn-outline-danger btn-icon" value="1"> 
                                  <i class="fa-solid fa-trash-can"></i>
                                </button>
                              <% } %>
                          </form>
                        </td>
                    </tr>
                    <% sayi1++; } %>
                    <% } %>
                    
                  </table>

            </div>


            <%- include('includes/foot.ejs') %>